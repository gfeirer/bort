<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
	<head>
		<title><%= @page_title || APP_CONFIG[:site_name] %></title>
		<meta http-equiv="content-type" content="text/xhtml; charset=utf-8" />
		<meta http-equiv="imagetoolbar" content="no" />
		<meta name="distribution" content="all" />
		<meta name="robots" content="all" />	
		<meta name="resource-type" content="document" />
		<meta name="MSSmartTagsPreventParsing" content="true" />
		<%= stylesheet_link_tag 'base' %>
		<%= stylesheet_link_tag 'themes/default/style.css' %>
		<%= javascript_include_tag :defaults %>
	</head>
	<body>
		<div id="container">
			<div id="header">
        <h1>
          <%= link_to "BORT - Name of the project", "/" %>
        </h1>
        <div id="user-navigation">
          <ul>
            <% if logged_in? %>
              <li><%= link_to 'Perfil', edit_user_path(current_user) if current_user %></li>
              <li><%= link_to 'Logout', logout_path %></li>
            <% else %>
              <li><%= link_to 'Login', login_path %></li>
            <% end %>
          </ul>
          <div class="clear"></div>
        </div> <!-- user-navigation -->

        <div id="main-navigation">
      		<% if logged_in? %>
					  <%= menu_builder(@active_controller) %>
				  <% end %>
          <div class="clear"></div>
        </div> <!-- main-navigation -->


      </div> <!-- header -->

      <div id="box">
        <div id="block-login" class="block">
          <h2><%= @page_title %></h2>
          <div class="content login">
            <div class="flash">
              <% if flash[:error] %>
                <div class="message error">
                  <p><%= flash[:error] %></p>
                </div>
              <% end %>
              <% if flash[:warning] %>
                <div class="message warning">
                  <p><%= flash[:warning] %></p>
                </div>
              <% end %>
              <% if flash[:notice] %>
                <div class="message notice">
                  <p><%= flash[:notice] %></p>
                </div>
              <% end %>
            </div> <!-- flash -->

            <%= yield :layout %>

          </div>
        </div> <!-- block-login -->

      </div>
      
        <div class="clear" />
        
		</div> <!-- container -->
	</body>
</html>
